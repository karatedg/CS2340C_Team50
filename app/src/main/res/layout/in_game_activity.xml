<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_background"
    android:screenOrientation="landscape">

    <RelativeLayout
        android:id="@+id/gameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/map2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/gameMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/map1" />
    </RelativeLayout>

    <TextView
        android:id="@+id/playerName"
        android:layout_width="100dp"
        android:layout_height="19dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:text="Player"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/healthValue"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/healthIcon"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/health_icon" />

    <TextView
        android:id="@+id/healthValue"
        android:layout_width="30dp"
        android:layout_height="16dp"
        android:layout_marginTop="16dp"
        android:text="100"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/healthIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/difficultyText"
        android:layout_width="33dp"
        android:layout_height="12dp"
        android:layout_marginLeft="25px"
        android:text="Difficulty:"
        android:textColor="#FFFFFF"
        android:textSize="20px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/healthIcon" />

    <TextView
        android:id="@+id/difficultySetting"
        android:layout_width="31dp"
        android:layout_height="12dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="9dp"
        android:text="Normal"
        android:textColor="#FFFFFF"
        android:textSize="20px"
        app:layout_constraintStart_toEndOf="@+id/difficultyText"
        app:layout_constraintTop_toBottomOf="@+id/healthValue" />

    <Button
        android:id="@+id/skipToEnd"
        android:layout_width="115dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:text="End Game"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:text="Score: "
        android:textColor="#FFFF"
        app:layout_constraintBottom_toTopOf="@+id/skipToEnd"
        app:layout_constraintHorizontal_bias="0.217"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035" />
    =======

    <Button
        android:id="@+id/previousMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous Map"
        app:layout_constraintBottom_toTopOf="@+id/skipToEnd"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/nextMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>