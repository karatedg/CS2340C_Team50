<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_background"
    android:screenOrientation="landscape">

    <ImageView
        android:id="@+id/playerSprite"
        android:layout_width="44dp"
        android:layout_height="39dp"
        app:srcCompat="@drawable/blue_idle"
        tools:layout_editor_absoluteX="371dp"
        tools:layout_editor_absoluteY="351dp" />

    <TextView
        android:id="@+id/playerName"
        android:layout_width="100dp"
        android:layout_height="19dp"
        android:text="Player"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/healthIcon"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginLeft="25px"
        android:layout_marginTop="25px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/health_icon" />

    <TextView
        android:id="@+id/healthValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45px"
        android:text="100"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="40dp" />

    <TextView
        android:id="@+id/difficultyText"
        android:layout_width="31dp"
        android:layout_height="12dp"
        android:layout_marginLeft="25px"
        android:text="Difficulty:"
        android:textColor="#FFFFFF"
        android:textSize="20px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/healthIcon" />

    <TextView
        android:id="@+id/difficultySetting"
        android:layout_width="31dp"
        android:layout_height="12dp"
        android:text="Normal"
        android:textColor="#FFFFFF"
        android:textSize="20px"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="40dp" />

    <Button
        android:id="@+id/skipToEnd"
        android:layout_width="115dp"
        android:layout_height="44dp"
        android:text="End Game"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="330dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="966dp"
        android:layout_height="565dp"
        app:srcCompat="@drawable/firstmap"
        tools:layout_editor_absoluteX="-27dp"
        tools:layout_editor_absoluteY="-91dp" />
</androidx.constraintlayout.widget.ConstraintLayout>